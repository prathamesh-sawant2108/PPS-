#include<stdio.h>
int main()
{
    int phy, chem, bio, maths, sum;
    float avg, per;

    printf("Marks obtained in Physics: ");
    scanf("%d", &phy);

    printf("Marks obtained in Chemistry: ");
    scanf("%d", &chem);

    printf("Marks obtained in Biology: ");
    scanf("%d", &bio);

    printf("Marks obtained in Maths: ");
    scanf("%d", &maths);

    sum = phy + chem + bio + maths;
    printf("The total marks obtained are: %d\n", sum);

    avg = sum / 4.0;
    printf("The Average is: %.2f\n", avg);

    per = (sum / 400.0) * 100;
    printf("The total percentage obtained is: %.2f%%\n", per);

    return 0;
}
